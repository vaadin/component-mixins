{
  "name": "component-mixins",
  "private": true,
  "description": "Mixins and helpers for future versions of Vaadin components",
  "author": "Vaadin Ltd",
  "license": "Apache-2.0",
  "scripts": {
    "build": "tsc",
    "lint": "eslint packages --ext .ts",
    "test": "karma start",
    "test:debug": "karma start --single-run false --browsers Chrome",
    "test:sauce": "cross-env TEST_PLATFORM=sauce karma start"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-decorators": "^7.10.5",
    "@babel/preset-typescript": "^7.10.4",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@commitlint/config-lerna-scopes": "^11.0.0",
    "@open-wc/karma-esm": "^3.0.5",
    "@types/chai": "^4.2.12",
    "@types/mocha": "^7.0.2",
    "@types/sinon": "^9.0.5",
    "@types/sinon-chai": "^3.2.4",
    "chai": "^4.2.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.9.0",
    "eslint-config-vaadin": "^0.3.6",
    "husky": "^4.3.0",
    "karma": "^5.2.2",
    "karma-chrome-launcher": "^3.1.0",
    "karma-coverage": "^2.0.3",
    "karma-firefox-launcher": "^1.3.0",
    "karma-mocha": "^2.0.1",
    "karma-mocha-reporter": "^2.2.5",
    "karma-sauce-launcher": "4.1.5",
    "karma-sinon-chai": "^2.0.2",
    "karma-source-map-support": "^1.4.0",
    "lerna": "^3.22.1",
    "lint-staged": "^10.3.0",
    "mocha": "^7.1.1",
    "prettier": "^2.1.2",
    "sinon": "^9.0.3",
    "sinon-chai": "^3.5.0",
    "ts-lit-plugin": "^1.2.1",
    "typescript": "^3.9.3"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "workspaces": [
    "packages/*"
  ]
}
