{
  "extends": "vaadin",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2018,
    "project": "./tsconfig.json"
  },
  "rules": {
    "max-classes-per-file": "off",
    "@typescript-eslint/ban-ts-ignore": "off"
  },
  "overrides": [
    {
      "files": [ "packages/**/test/*.test.ts" ],
      "env": {
        "mocha": true
      },
      "globals": {
        "chai": false,
        "sinon": false
      },
      "rules": {
        "no-restricted-syntax": "off",
        "no-unused-expressions": "off"
      }
    }
  ]
}
